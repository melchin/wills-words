#!/bin/bash

# Exit immediately if a command exits with a non-zero status
set -e

echo "Deleting local gh-pages branch..."
git branch -D gh-pages || true  # Ignore error if branch doesn't exist

echo "Deleting remote gh-pages branch..."
git push origin --delete gh-pages || true  # Ignore error if branch doesn't exist

echo "Deploying build folder to gh-pages..."
git subtree push --prefix build origin gh-pages

echo "Deployment complete!"
